{
	"name": "uranio-core",
	"version": "0.0.3",
	"description": "Uranio core",
	"main": "dist/index.js",
	"bin": {
		"uranio-generate-core": "dist/server/generate.js"
	},
	"exports": {
		".": "./dist/server.js",
		"./types": "./dist/server/types.js",
		"./client": "./dist/client.js",
		"./client/types": "./dist/client/types.js"
	},
	"typesVersions": {
		"*": {
			"*": [
				"dist/server.d.ts"
			],
			"types": [
				"dist/server/types.d.ts"
			],
			"client": [
				"dist/client.d.ts"
			],
			"client/types": [
				"dist/client/types.d.ts"
			]
		}
	},
	"repository": "git@github.com:nbl7/uranio-core.git",
	"author": "Andrea Reni <mail@nbl7.net>",
	"scripts": {
		"build": "yarn tsc -b",
		"dev": "yarn tsc-watch --onSuccess \"node -r source-map-support/register -r dotenv/config ./dist/dev.js\"",
		"plain:generate": "node -r source-map-support/register -r dotenv/config ./dist/server/generate.js",
		"generate": "yarn plain:generate urn_schema_repo_path=./node_modules/uranio-schema"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/caller": "^1.0.0",
		"@types/express-fileupload": "^1.2.2",
		"@types/jsonwebtoken": "^8.5.8",
		"uranio-dev": "git+ssh://git@github.com/nbl7/uranio-dev.git#master"
	},
	"dependencies": {
		"aws-sdk": "^2.1066.0",
		"bcryptjs": "^2.4.3",
		"caller": "^1.0.1",
		"config": "^3.3.7",
		"dateformat": "^3.0.3",
		"dotenv": "^15.0.0",
		"esbuild": "^0.14.25",
		"express-fileupload": "^1.2.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.11.15",
		"uranio-schema": "ssh://git@github.com/nbl7/uranio-schema.git#master",
		"urn-lib": "git+ssh://git@github.com/nbl7/uranio-lib.git#master"
	}
}
